generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Book {
    id Int @id @default(autoincrement())
    name String
    author String

    @@map("books")
}


model User {
  id Int @id @default(autoincrement())
  name String 
  email String 
  password String
  @@map("test_user")
}

